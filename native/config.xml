<?xml version="1.0" encoding="UTF-8" ?>
  <widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "io.wq.wyobio"
    version     = "{{version}}" >

  <name>WyoBio</name>
  <description>
    The Wyoming Biodiversity Citizen Science Initiative (WyoBio) is a project intended to connect all citizens and visitors in Wyoming with information about biodiversity, including plants, animals and fungi.
  </description>   
  <author href="https://wyobio.org" email="wygisc@uwyo.edu">
    WyGISC
  </author>

  <preference name='phonegap-version' value='cli-5.1.1' />
  <preference name="permissions" value="none" />
  <preference name="android-installLocation" value="auto" />

  <gap:platform name="android" />
  <gap:platform name="ios" />

  <gap:plugin name="org.apache.cordova.camera" source='pgb' />
  <gap:plugin name="org.apache.cordova.geolocation" source='pgb' />

  {{#crosswalk}}
  <gap:plugin name='org.crosswalk.engine' version='1.3.0' source='pgb' />
  {{/crosswalk}}

  <gap:plugin name="cordova-plugin-whitelist" source="npm" />
  <access origin="*" />

</widget>
